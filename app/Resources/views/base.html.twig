                                {% include 'GraduallyGraduateBundle:Layout:sidebar.html.twig' %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            {% endif %}
            <div class="container-fluid" id="pcont">
                {% if app.user %}
                {% block topbar %}
                <!-- TOP NAVBAR -->
                <nav id="head-nav" class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-collapse">
                            {% if app.user is null %}
                                {% include 'GraduallyHomeBundle:Layout:topbar.html.twig' %}
                            {% elseif app.user.type == 'RECRUITER' %}
                                {% include 'GraduallyRecruiterBundle:Layout:topbar.html.twig' %}
                            {% elseif app.user.type == 'GRADUATE' %}
                                {% include 'GraduallyGraduateBundle:Layout:topbar.html.twig' %}
                            {% endif %}            
                        </div><!--/.nav-collapse animate-collapse -->
                    </div>
                </nav>
                {% endblock %}
                {% endif %}
                
                {% block content %}
                {% if app.user %}
                <div class="cl-mcont">
                {% else %}
                <div class="cl-mcont no-padding">
                {% endif %}           
                    {% if app.user is null %}
                        {% include 'GraduallyHomeBundle:Dashboard:dashboard.html.twig' %}
                    {% elseif app.user.type == 'RECRUITER' %}
                        {% include 'GraduallyRecruiterBundle:Dashboard:dashboard.html.twig' %}
                    {% elseif app.user.type == 'GRADUATE' %}
                        {% include 'GraduallyGraduateBundle:Dashboard:dashboard.html.twig' %}
                    {% endif %}                   
                </div>
                {% endblock %}
