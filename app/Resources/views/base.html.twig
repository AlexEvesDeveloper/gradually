<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Gradually{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets %}
        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
        <!-- Jasny Bootstrap -->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    {% block navbar %}
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('gradually_home_default_index') }}">GRADUALLY</a>
                </div><!-- navbar-header -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{path('gradually_search_graduate_index')}}">Graduates</a>
                        </li>
                        <li>
                            <a href="{{path('gradually_recruiter_default_index')}}">Recruiters</a>
                        </li>
                        <li>
                            <a href="{{path('gradually_search_job_index')}}">Jobs</a>
                        </li>
                    </ul><!-- nav navbar-nav -->
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            {% if not app.user %}
                                <a href="{{path('gradually_user_default_login')}}">
                                    Sign in
                                </a>
                            {% else %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{app.user.username}}<span class="caret"></span></a>
                                {% elseif is_granted('ROLE_RECRUITER') %}
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{app.user.companyname}}<span class="caret"></span></a>
                                {% elseif is_granted('ROLE_GRADUATE') %}
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{app.user.firstname}}<span class="caret"></span></a>
                                {% endif %}
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('gradually_user_default_logout') }}">Sign out</a></li>
                                </ul>
                            {% endif %}
                        </li>
                    </ul><!-- nav navbar-nav navbar-right -->
                </div><!-- collapse navbar-collapse -->
            </div><!-- container-fluid -->
        </nav>
    {% endblock %}
    {% block body %}{% endblock %}
    
    {% block javascripts %}
        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <!-- Jansny Bootstrap -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>

    {% endblock %}


  </body>
</html>
