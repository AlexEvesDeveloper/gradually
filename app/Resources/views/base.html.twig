            <div class="cl-sidebar">
                <div class="cl-toggle"><i class="fa fa-bars"></i></div>
                <div class="cl-navblock">
                    <div class="menu-space">
                        <div class="content">
                            <div class="sidebar-logo">
                                <div class="logo">
                                    <a href="{{path('gradually_home_default_index')}}">JURU</a>
                                </div>
                            </div>
                            {% if app.user.type == 'RECRUITER' %}
                                {% include 'GraduallyRecruiterBundle:Layout:sidebar.html.twig' %}
