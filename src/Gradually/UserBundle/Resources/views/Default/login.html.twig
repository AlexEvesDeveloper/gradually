{% extends "::base.html.twig" %}

{% block sidebar %}
{% endblock %}

{% block topbar %}
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <div class="col-md-6 col-md-offset-3">
        <div class="block-flat">
            <div class="header">
                <h3>Sign In</h3>
            </div><!-- header -->
            <div class="content">
                <form role="form" action="{{ path('gradually_user_default_logincheck') }}" method="post">
                    <div class="form-group">
                        <label>E-mail or Company Name</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="E-mail or Company name" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" type="password" id="password" name="_password" placeholder="Password" />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-large btn-primary" type="submit">Sign in</button>
                </form>
            </div><!-- content -->
        </div><!-- block-flat -->
    </div>
    
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

{% endblock %}
