{% extends "::base.html.twig" %}

{% block body %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
    
    <div class="container under-navbar">
        <div class="row">
	    <div class="col-md-4"></div>            
            <div class="col-md-4">
                <form class="form-signin" action="{{ path('gradually_user_default_logincheck') }}" method="post">
		            <h2 class="form-signin-heading center-align">Sign in</h2>
                    <div class="input-group input-group-small">
			            <span class="input-group-addon glyphicon glyphicon-tag"></span>
		    	        <input class="input-block-level form-control login-input" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail or Company name" />
                    </div>
		            <br>
		            <div class="input-group input-group-small">
			            <span class="input-group-addon glyphicon glyphicon-question-sign"></span>
                    	<input class="input-block-level form-control login-input" type="password" id="password" name="_password" placeholder="Password" />
		            </div>
		            <br>
		            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		            <p class="center-align"><button class="btn btn-large btn-primary" type="submit">Sign in</button></p>
                </form>
            </div><!-- col-md-6 -->
	    <div class="col-md-4"></div>
        </div><!-- row -->
    
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
    
    </div><!-- container -->
{% endblock %}
