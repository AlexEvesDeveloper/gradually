    // handle qualification uploads from ajax wizard
    $('#graduate-welcome-wizard').modal('show');

    $('#finish').on('click', function () {
        data = {'id':{{app.user.id}}};   
        $.post('graduates/dashboard/complete-wizard', data)
    }); 
</script>