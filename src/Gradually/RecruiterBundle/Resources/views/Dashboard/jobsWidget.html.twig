<div class="col-sm-12">
	<div class="block-flat">
		<div class="header">
			<h3>Your jobs at a glance</h3>
		</div>
		<div class="content">
			<div class="tab-container">
				{% if app.user.jobs|length == 0 %}
					You haven't posted any jobs yet
				{% else %}
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab" href="#most-recent">Most recent</a></li>
					<li><a data-toggle="tab" href="#most-viewed">Most views</a></li>
					<li><a data-toggle="tab" href="#most-applicants">Most applicants</a></li>
				</ul>
				<div class="tab-content">
					<div id="most-recent" class="tab-pane active cont">
						<table class="no-border">
							<thead class="no-border">
								<tr>
									<th>Title</th>
									<th class="text-right">Action</th>
								</tr>
							</thead>
							<tbody class="no-border-y">
								{% for job in mostRecent %}
								<tr>
									<td>{{job.title}}</td>
									<td class="text-right">Edit</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>						
					</div>
					<div id="most-viewed" class="tab-pane cont">
						<table class="no-border">
							<thead class="no-border">
								<tr>
									<th>Title</th>
									<th class="text-right">Views</th>
								</tr>
							</thead>
							<tbody class="no-border-y">
								{% for job in mostViewed %}
								<tr>
									<td>{{job.title}}</td>
									<td class="text-right">{{job.viewCount}}</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<div id="most-applicants" class="tab-pane cont">
						<table class="no-border">
							<thead class="no-border">
								<tr>
									<th>Title</th>
									<th class="text-right">Applications</th>
								</tr>
							</thead>
							<tbody class="no-border-y">
								{% for job in mostApplied %}
								<tr>
									<td>{{job.title}}</td>
									<td class="text-right">{{job.applicationCount}}</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>						
					</div>
				</div>
				<a href="">View all of your jobs</a>
				{% endif %}
			</div>		
		</div>
	</div>
</div>